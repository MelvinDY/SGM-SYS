{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "EmasPOS",
  "version": "1.0.0",
  "identifier": "com.emaspos.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "EmasPOS - Sistem Manajemen Toko Emas",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 700,
        "center": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Business",
    "shortDescription": "Sistem Manajemen Toko Emas",
    "longDescription": "EmasPOS adalah sistem manajemen toko emas yang mencakup POS, inventori, buyback, tukar tambah, dan laporan.",
    "copyright": "2026 EmasPOS"
  }
}
